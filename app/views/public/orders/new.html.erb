<div class="row wid-80 mx-auto">
  <h2 class="px-4 py-0 text-center my-3 back-color mx-5">注文情報入力</h2>
</div>

<%= form_with model: @order, url: orders_check_path, local: true do |f| %>

  <p class="bold mt-4">支払方法</p>
  <div class="mx-4">
    <%= f.radio_button :method_of_payment, :credit, checked: true %>
    <%= f.label :method_of_payment, "クレジットカード" %><br>
    <%= f.radio_button :method_of_payment, :bank %>
    <%= f.label :method_of_payment, "銀行振込" %>
  </div>

  <p class="bold mt-4">お届け先</p>
  <div class="mx-4">
    <!--ご自身の住所-->
    <%= f.radio_button :address_select, :my_address, checked: true %>
    <%= f.label :address_select, "ご自身の住所", {value: :my_address, style: "display: inline-block;"} %>
    <div class="mx-4">
      〒<%= current_customer.postal_code + " " + current_customer.address %><br>
      <%= current_customer.last_name + current_customer.first_name %>
    </div>
    <!--登録済み住所から選択-->
    <%= f.radio_button :address_select, :other_address, class: "mt-4" %>
    <%= f.label :address_select, "登録済み住所から選択", {value: :other_address, style: "display: inline-block;"} %>
    <div class="mx-4">
      <%= f.collection_select(:address_id, current_customer.addresses, :id, :full_address, {prompt: false}, {class: "wid-80"}) %>
    </div>
    <!--新しいお届け先-->
    <%= f.radio_button :address_select, :new_address, class: "mt-4" %>
    <%= f.label :address_select, "新しいお届け先", {value: :new_address, style: "display: inline-block;"} %>
    <div class="mx-4">
      <%= f.label :delivery_postal_code, "郵便番号（ハイフンなし）", class: "w-25" %>
      <%= f.text_field :delivery_postal_code, placeholder: "0000000" %><br>
      <%= f.label :delivery_address, "住所", class: "w-25" %>
      <%= f.text_field :delivery_address, placeholder: "東京都渋谷区代々木神園町0-0", class: "wid-50" %><br>
      <%= f.label :delivery_addressee, "宛名", class: "w-25" %>
      <%= f.text_field :delivery_addressee, placeholder: "令和道子" %>
    </div>
  </div>
  <%= f.submit "確認画面へ進む", class: "btn btn-primary d-block mx-auto px-4 mt-3" %>
<% end %>
