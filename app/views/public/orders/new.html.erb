<h2>注文情報入力</h2>
<%= form_with model: @order, url: orders_check_path, local: true do |f| %>

  <p>支払方法</p>
  <%= f.radio_button :method_of_payment, :credit, checked: "checked" %>
  <%= f.label :method_of_payment, "クレジットカード" %><br>
  <%= f.radio_button :method_of_payment, :bank %>
  <%= f.label :method_of_payment, "銀行振込" %><br>


  <p>お届け先</p>
  <!--ご自身の住所-->
  <%= f.radio_button :address_select, :my_address %>
  <%= f.label :address_select, "ご自身の住所", {value: :my_address, style: "display: inline-block;"} %><br>
  〒<%= current_customer.postal_code + " " + current_customer.address %><br>
  <%= current_customer.last_name + current_customer.first_name %><br>

  <!--登録済み住所から選択-->
  <%= f.radio_button :address_select, :other_address %>
  <%= f.label :address_select, "登録済み住所から選択", {value: :other_address, style: "display: inline-block;"} %><br>
  <%= f.collection_select(:address_select, current_customer.addresses, :id, :full_address) %><br>

  <!--新しいお届け先-->
  <%= f.radio_button :address_select, :new_address %>
  <%= f.label :address_select, "新しいお届け先", {value: :new_address, style: "display: inline-block;"} %><br>
  <%= f.label :delivery_postal_code, "郵便番号（ハイフンなし）" %>
  <%= f.text_field :delivery_postal_code, placeholder: "0000000" %><br>
  <%= f.label :delivery_address, "住所" %>
  <%= f.text_field :delivery_address, placeholder: "東京都渋谷区代々木神園町0-0" %><br>
  <%= f.label :delivery_addressee, "宛名" %>
  <%= f.text_field :delivery_addressee, placeholder: "令和道子" %><br>
  <%= f.submit "確認画面へ進む" %>
<% end %>
