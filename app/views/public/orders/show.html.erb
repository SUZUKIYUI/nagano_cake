<div class="row">
  <h2 class="px-4 py-0 text-center my-3 back-color">注文履歴詳細</h2>
</div>

<div class="row">
  <!-------------------------------------------------------------->
  <div class="col-md-7">
    <p>注文情報</p>
    <table>
      <tr>
        <th>注文日</th>
        <td>
          <%= @order.created_at.strftime('%Y/%m/%d') %>
        </td>
      </tr>
      <tr>
        <th>配達先</th>
        <td>
          〒<%= @order.delivery_postal_code %><br>
          <%= @order.delivery_address %><br>
          <%= @order.delivery_addressee %>
        </td>
      </tr>
      <tr>
        <th>支払方法</th>
        <td>
          <%= @order.method_of_payment_i18n %>
        </td>
      </tr>
      <tr>
        <th>ステータス</th>
        <td>
          <%= @order.order_status_i18n %>
        </td>
      </tr>
    </table>
  </div>
  <!------------------------------------------------------------------------>
  <div class="col-md-3">
    <p>請求情報</p>
    <table>
      <tr>
        <th>商品合計</th>
        <td>
          <%= (@order.total_price - @order.shipping_fee).to_s(:delimited) %>
        </td>
      </tr>
      <tr>
        <th>配送料</th>
        <td>
          <%= @order.shipping_fee %>
        </td>
      </tr>
      <tr>
        <th>ご請求額</th>
        <td>
          <%= @order.total_price.to_s(:delimited) %>
        </td>
      </tr>
    </table>
  </div>
  <!------------------------------------------------------------------------>
  <div class="col-md-8">
    <p>注文内容</p>
    <table>
      <thead>
        <tr>
          <th>商品</th>
          <th>単価（税込）</th>
          <th>個数</th>
          <th>小計</th>
        </tr>
      </thead>
      <tbody>
        <% @order.order_items.each do |order_item| %>
          <td>
            <%= order_item.item.name %>
          </td>
          <td>
            <%= order_item.tax_included_price.to_s(:delimited) %>
          </td>
          <td>
            <%= order_item.amount %>
          </td>
          <td>
            <%= (order_item.tax_included_price*order_item.amount).to_s(:delimited) %>
          </td>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

