<div class="row wid-80 mx-auto mb-5">
  <h2 class="px-4 py-0 text-center my-3 back-color">注文履歴一覧</h2>
</div>

<table>
  <thead>
    <tr>
      <th>注文日</th>
      <th>配送先</th>
      <th>注文商品</th>
      <th>支払金額</th>
      <th>ステータス</th>
      <th>注文詳細</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td>
          <%= order.created_at.strftime('%Y/%m/%d') %>
        </td>
        <td>
          〒<%= order.delivery_postal_code %><br>
          <%= order.delivery_address %><br>
          <%= order.customer.last_name + order.customer.first_name %>
        </td>
        <td>
          <% order.order_items.each do |order_item| %>
            <%= order_item.item.name %>
          <% end %>
        </td>
        <td>
          <%= order.total_price %>円
        </td>
        <td>
          <%= order.order_status_i18n %>
        </td>
        <td class="text-center">
          <%= link_to "表示する", order_path(order.id), class: "btn btn-primary px-2 py-1" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>




