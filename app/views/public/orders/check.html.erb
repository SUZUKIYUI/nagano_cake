<div class="row wid-80 mx-auto">
  <h2 class="px-4 py-0 text-center my-3 back-color mx-5">注文情報確認</h2>
</div>


<div class="row d-flex justify-content-between">
    <table class="border-table col-md-8">
        <thead>
            <tr>
                <th class="border-table wid-52">商品名</th>
                <th class="border-table wid-16">単価（税込）</th>
                <th class="border-table wid-16">数量</th>
                <th class="border-table wid-16">小計</th>
            </tr>
        </thead>
        <tbody>
            <% @cart_items.each do |cart_item| %>
                <tr>
                    <td class="border-table">
                        <%= attachment_image_tag cart_item.item, :image, :fill, 60, 40 %>
                        <span class="mx-1"></span><%= cart_item.item.name %>
                    </td>
                    <td class="border-table">
                        <%= ((cart_item.item.price + cart_item.item.price*0.1).floor).to_s(:delimited) %>
                    </td>
                    <td class="border-table">
                        <%= cart_item.amount %>
                    </td>
                    <td class="border-table">
                        <%= ((cart_item.item.price + cart_item.item.price*0.1).floor * cart_item.amount).to_s(:delimited) %>
                    </td>
                </tr>
            <% end %>
        </tbody>
    </table>

    <table class="border-table col-md-3">
        <tr class="wid-100">
            <th class="border-table wid-50">送料</th>
            <td class="border-table wid-50"><%= @order.shipping_fee %></td>
        </tr>
        <tr>
            <th class="border-table wid-50">商品合計</th>
            <td class="border-table wid-50"><%= (@order.total_price - @order.shipping_fee).to_s(:delimited) %></td>
        </tr>
        <tr>
            <th class="border-table wid-50">請求金額</th>
            <td class="border-table wid-50"><%= @order.total_price.to_s(:delimited) %></td>
        </tr>
    </table>
</div>

<div class="d-flex mt-5">
    <span class="bold mr-4">支払方法</span>
    <div>
        <%= @order.method_of_payment_i18n %>
    </div>
</div>
<div class="d-flex mt-5">
    <span class="bold mr-4">お届け先</span>
    <div>
        〒<%= @order.delivery_postal_code %>
        <%= @order.delivery_address %><br>
        <%= @order.delivery_addressee %><br>
    </div>
</div>

<%= form_with model: @order, url: orders_path, local: true do |f|  %>
    <%= f.hidden_field :customer_id, value: current_customer.id %>
    <%= f.hidden_field :total_price %>
    <%= f.hidden_field :method_of_payment %>
    <%= f.hidden_field :delivery_postal_code %>
    <%= f.hidden_field :delivery_address %>
    <%= f.hidden_field :delivery_addressee %>
    <%= f.submit "注文を確定する", class: "btn btn-success px-4 mt-5 d-block mx-auto" %>
<% end %>