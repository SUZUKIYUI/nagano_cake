<div class="row wid-80 mx-auto mb-4">
  <h2 class="px-4 py-0 text-center my-3 back-color">配送先編集</h2>
</div>

<!----------------------------エラーメッセージ-------------------------->
<% if @address.errors.any? %>
  <%= @address.errors.count %>件のエラー
  <ul>
    <% @address.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<!---------------------------------------------------------------------->

<%= form_with model: @address, url: address_path(@address.id), local: true do |f| %>
  <div class="d-flex mb-2">
    <%= f.label :postal_code, "郵便番号(ハイフンなし)", class: "wid-25" %>
    <%= f.text_field :postal_code %>
  </div>
  <div class="d-flex mb-2">
    <%= f.label :address, "住所", class: "wid-25" %>
    <%= f.text_field :address, class: "wid-52" %>
  </div>
  <div class="d-flex justify-content-between">
    <div class="d-flex justify-content-between wid-50">
      <%= f.label :name, "宛名", class: "wid-50" %>
      <%= f.text_field :name, class: "wid-50" %>
    </div>
    <div>
      <%= f.submit "変更内容を保存", class: "btn btn-success px-3 py-1" %>
    </div>
  </div>
<% end %>