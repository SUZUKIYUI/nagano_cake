<div class="row">
  <h2 class="font-small px-4 py-0 text-center my-3 back-color">新規会員登録</h2>
</div>

<%= form_with model: @customer, url: customer_registration_path, id: "new_customer", class: "new_customer", local: true do |f| %>
  <%= render "public/customers/shared/error_messages", resource: resource %>

  <%= f.label [:last_name, :first_name], "名前" %>
  <div class="field">
    <%= f.label :last_name, "(姓)" %><br />
    <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
  </div>

  <div class="field">
    <%= f.label :first_name, "(名)" %><br />
    <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
  </div>

  <%= f.label [:last_name_kana, :first_name_kana], "フリガナ" %>
  <div class="field">
    <%= f.label :last_name_kana, "(セイ)" %><br />
    <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %>
  </div>

  <div class="field">
    <%= f.label :first_name_kana, "(メイ)" %><br />
    <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
  </div>

  <div class="field">
    <%= f.label :email, "メールアドレス" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :postal_code, "郵便番号(ハイフンなし)" %><br />
    <%= f.number_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
  </div>

  <div class="field">
    <%= f.label :address, "住所" %><br />
    <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
  </div>

  <div class="field">
    <%= f.label :telephone_number, "電話番号(ハイフンなし)" %><br />
    <%= f.number_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %>
  </div>

  <div class="field">
    <%= f.label :password, "パスワード(６文字以上)" %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "パスワード(確認用)" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>


<div class="row">
  <h2 class="font-small px-4 py-0 text-center mt-5 mb-3 back-color">既に登録済みの方</h3>
</div>
<div class="actions ml-5">
  <%= link_to "こちら", new_customer_session_path %>からログインしてください
</div>