<div class="d-flex align-items-baseline">
  <h2 class="bold-font">商品一覧</h2>
  <span>（全<%= @items.count %>件）</span>
</div>
<div class=" d-flex flex-wrap">
  <% @items.each do |item| %>
    <div class="wid-25 my-3">
      <%= link_to item_path(item.id) do %>
        <%= attachment_image_tag item, :image, :fill, 220, 160, class: "mb-2" %><br>
        <%= item.name %><br>
        ¥<%= ((item.price + item.price*0.1).floor).to_s(:delimited) %>
      <% end %>
    </div>
  <% end %>
</div>

<%= paginate @items %>
