<div class="row wid-80 mx-auto mb-5">
  <h2 class="px-4 py-0 text-center my-3 back-color">ジャンル一覧・追加</h2>
</div>


<!-----------------エラーメッセージ------------------->
<% if @genre.errors.any? %>
  <%= @genre.errors.count %>件のエラー
  <ul>
    <% @genre.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<!---------------------------------------------------->
<div class="mb-5">
  <%= form_with model:@genre,url:admin_genres_path, local: true do |f| %>
    <%= f.label :name, "ジャンル名", class: "wid-15" %>
    <%= f.text_field :name, placeholder: "ジャンル名", class: "wid-15" %>
    <%= f.submit "新規登録", class: "btn btn-success px-4 ml-5" %>
  <% end %>
</div>
<table class="table wid-40">
  <thead>
    <tr>
      <th>ジャンル</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @genres.each do |genre| %>
      <tr>
        <td>
          <%= genre.name %>
        </td>
        <td class="text-right">
          <%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn-sm btn btn-success px-4 mx-3" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

