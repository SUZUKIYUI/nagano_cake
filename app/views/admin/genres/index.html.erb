<div class="row">
  <h2 class="px-4 py-0 text-center my-3 back-color">ジャンル一覧・追加</h2>
</div>


<!-----------------エラーメッセージ------------------->
<% if @genre.errors.any? %>
  <%= @genre.errors.count %>件のエラー
  <ul>
    <% @genre.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<!---------------------------------------------------->

<%= form_with model:@genre,url:admin_genres_path, local: true do |f| %>
  <%= f.label :name, "ジャンル名" %>
  <%= f.text_field :name, placeholder: "ジャンル名" %>
  <%= f.submit "新規登録" %>
<% end %>


<p>ジャンル</p>

<% @genres.each do |genre| %>
  <%= genre.name %>
  <%= link_to "編集する", edit_admin_genre_path(genre.id) %>
<% end %>

