<div class="row wid-80 mx-auto mb-5">
  <h2 class="px-4 py-0 text-center my-3 back-color">ジャンル編集</h2>
</div>

<!-----------------エラーメッセージ------------------->
<% if @genre.errors.any? %>
  <%= @genre.errors.count %>件のエラー
  <ul>
    <% @genre.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<!---------------------------------------------------->

<%= form_with model:@genre,url:admin_genre_path(@genre.id), local: true do |f| %>
  <%= f.label :name, "ジャンル名", class: "wid-15" %>
  <%= f.text_field :name, class: "wid-15" %>
  <%= f.submit "変更を保存", class: "btn btn-success px-4 ml-5" %>
<% end %>

