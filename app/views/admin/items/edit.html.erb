<h1>商品編集</h1>

<!-----------------エラーメッセージ------------------->
<% if @item.errors.any? %>
  <%= @item.errors.count %>件のエラー
  <ul>
    <% @item.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<!---------------------------------------------------->

<%= form_with model:@item, url:admin_item_path(@item.id), local: true do |f| %>
  <%= f.label :image, "商品画像" %>
  <%= f.attachment_field :image %><br>
  <%= f.label :name, "商品名" %>
  <%= f.text_field :name, placeholder: "商品名" %><br>
  <%= f.label :introduction, "商品説明" %>
  <%= f.text_area :introduction, placeholder: "ここに説明文を記述します" %><br>
  <%= f.label :genre_id, "ジャンル" %>
  <%= f.collection_select(:genre_id, @genres, :id, :name, {selected: :genre_id}) %><br>
  <%= f.label :proce, "税抜価格" %>
  <%= f.text_field :price, placeholder: "1000" %><span>円</span><br>
  <%= f.label :is_active, "販売ステータス" %>
  <%= f.radio_button :is_active, "販売中", checked: true %>販売中 <%= f.radio_button :is_active, "販売停止中" %>販売停止中<br>
  <%= f.submit "編集を保存" %>
<% end %>

