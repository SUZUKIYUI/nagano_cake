<div class="row mb-5">
  <h2 class="px-4 py-0 text-center my-3 back-color">
    <%= @customer.last_name + @customer.first_name %>さんの会員詳細
  </h2>
</div>


<div class="d-flex my-2">
  <p class="wid-25">会員ID</p>
  <%= @customer.id %>
</div>
<div class="d-flex my-2">
  <p class="wid-25">氏名</p>
  <%= @customer.last_name + @customer.first_name %>
</div>
<div class="d-flex my-2">
  <p class="wid-25">フリガナ</p>
  <%= @customer.last_name_kana + @customer.first_name_kana %>
</div>
<div class="d-flex my-2">
  <p class="wid-25">郵便番号</p>
  <%= @customer.postal_code %>
</div>
<div class="d-flex my-2">
  <p class="wid-25">住所</p>
  <%= @customer.address %>
</div>
<div class="d-flex my-2">
  <p class="wid-25">電話番号</p>
  <%= @customer.telephone_number %>
</div>
<div class="d-flex my-2">
  <p class="wid-25">メールアドレス</p>
  <%= @customer.email %>
</div>
<div class="d-flex my-2">
  <p class="wid-25">会員ステータス</p>
  <%= @customer.is_deleted_i18n %>
</div>
<div class="d-flex my-2">
  <%= link_to "編集する", edit_admin_customer_path(@customer.id), class: "btn btn-success px-3 edit-btn" %>
  <%= link_to "注文履歴一覧を見る", admin_root_path(id: @customer.id), class: "btn btn-primary px-3 ml-5" %>
</div>
