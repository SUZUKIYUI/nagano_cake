<div class="row">
  <h2 class="px-4 py-0 text-center my-3 back-color">
    <%= @customer.last_name + @customer.first_name %>さんの会員情報編集
  </h2>
</div>

<p>会員ID</p>
<%= @customer.id %>
<%= form_with model: @customer, url: admin_customer_path, local: true do |f| %>

  <%= f.label [:last_name, :first_name], "氏名" %>
  <%= f.text_field :last_name %>
  <%= f.text_field :first_name %>

  <%= f.label [:last_name_kana, :first_name_kana], "フリガナ" %>
  <%= f.text_field :last_name_kana %>
  <%= f.text_field :first_name_kana %>

  <%= f.label :postal_code, "郵便番号" %>
  <%= f.text_field :postal_code %>

  <%= f.label :address, "住所" %>
  <%= f.text_field :address %>

  <%= f.label :telephone_number, "電話番号" %>
  <%= f.text_field :telephone_number %>

  <%= f.label :email, "メールアドレス" %>
  <%= f.text_field :email %>

  <%= f.label :is_deleted, "会員ステータス" %>
  <%= f.radio_button :is_deleted, "有効", checked: true %>有効 <%= f.radio_button :is_deleted, "退会" %>退会<br>

  <%= f.submit "変更を保存" %>

<% end %>

