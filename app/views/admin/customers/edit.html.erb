<div class="row mb-5">
  <h2 class="px-4 py-0 text-center my-3 back-color">
    <%= @customer.last_name + @customer.first_name %>さんの会員情報編集
  </h2>
</div>

<!---------------------------エラー文---------------------------->
<% if @customer.errors.any? %>
  <%= @customer.errors.count %>件のエラー
  <ul>
    <% @customer.errors.full_messages.each do |message|%>
    <li>
      <%= message %>
    </li>
    <% end %>
  </ul>
<% end %>
<!--------------------------------------------------------------->

<div class="d-flex mt-5 mb-2">
  <p class="wid-16">会員ID</p>
  <%= @customer.id %>
</div>

<%= form_with model: @customer, url: admin_customer_path, local: true do |f| %>
  <div class="my-2">
    <%= f.label [:last_name, :first_name], "氏名", class: "wid-16" %>
    <%= f.text_field :last_name, class: "wid-25" %>
    <%= f.text_field :first_name, class: "wid-25 ml-5" %>
  </div>
  <div class="my-2">
    <%= f.label [:last_name_kana, :first_name_kana], "フリガナ", class: "wid-16" %>
    <%= f.text_field :last_name_kana, class: "wid-25" %>
    <%= f.text_field :first_name_kana, class: "wid-25 ml-5" %>
  </div>
  <div class="my-2">
    <%= f.label :postal_code, "郵便番号", class: "wid-16" %>
    <%= f.text_field :postal_code, class: "wid-25" %>
  </div>
  <div class="my-2">
    <%= f.label :address, "住所", class: "wid-16" %>
    <%= f.text_field :address, class: "wid-60" %>
  </div>
  <div class="my-2">
    <%= f.label :telephone_number, "電話番号", class: "wid-16" %>
    <%= f.text_field :telephone_number, class: "wid-25" %>
  </div>
  <div class="my-2">
    <%= f.label :email, "メールアドレス", class: "wid-16" %>
    <%= f.text_field :email, class: "wid-25" %>
  </div>
  <div class="d-flex my-2">
    <%= f.label :is_deleted, "会員ステータス", class: "wid-16" %>
    <div>
      <%= f.radio_button :is_deleted, :effective, checked: true %>
      <%= f.label :is_deleted, "有効", value: :effective %>
    </div>
    <div>
      <%= f.radio_button :is_deleted, :withdrawal, class: "ml-3" %>
      <%= f.label :is_deleted, "退会", value: :withdrawal %>
    </div>
  </div>
  <div class="mt-5">
    <%= f.submit "変更を保存", class: "btn btn-success px-4 py-2 update-btn" %>
  </div>
<% end %>

