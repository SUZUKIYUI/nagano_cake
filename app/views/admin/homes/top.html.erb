<div class="row">
  <h2 class="px-4 py-0 text-center my-3 back-color">注文履歴一覧</h2>
</div>

<p>購入日時</p>
<p>購入者</p>
<p>注文個数</p>
<p>注文ステータス</p>

<% if @one_person_orders %>
  <% @one_person_orders.each do |order| %>
    <%= link_to order.created_at.strftime('%Y/%M/%D/%H/%M/%S'), admin_order_path(order.id) %>
    <%= order.customer.last_name + order.customer.first_name %>
    <%= order.order_items.amount %>
    <%= order.order_status_i18n %>
  <% end %>
<% else %>
  <% @orders.each do |order| %>
    <%= link_to order.created_at.strftime('%Y/%M/%D/%H/%M/%S'), admin_order_path(order.id) %>
    <%= order.customer.last_name + order.customer.first_name %>
    <%= "数" %>
    <%= order.order_status_i18n %>
  <% end %>
<% end %>

